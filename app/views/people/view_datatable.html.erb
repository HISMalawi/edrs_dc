		        value: function (format) {
		            var date = this;

		            var result = "";

		            if (!format) {

		                format = ""

		            }

		            var months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

		            var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September",
